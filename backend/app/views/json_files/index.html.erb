<div class="outer-background">
  <div class="wrapper">
    <h1>Uploaded JSON Files</h1>

    <%= form_with url: upload_json_file_path, local: true, multipart: true do %>
      <div>
        <label for="file">Select JSON File:</label>
        <%= file_field_tag :file %>
      </div>
      <div>
        <%= submit_tag 'Upload', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <h2>File List</h2>
    <ul>
      <% @json_files.each_with_index do |file, index| %>
        <li>
          <%= link_to "JSON#{index + 1}", json_file_path(file), class: 'file-link' %>
        </li>
      <% end %>
    </ul>

    <%= notice %>
    <%= alert %>
  </div>
</div>

