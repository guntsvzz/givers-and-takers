<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Settings</title>

  <!-- CSS for styling -->
  <style>
    /* Outer background with full width and blue color */
    .outer-background {
      background-color: #4A90E2;
      width: 100%;
      padding: 60px 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    /* Wrapper with a white background, rounded corners, and shadow */
    .wrapper {
      max-width: 800px;
      padding: 40px;
      background-color: #F7F9FC;
      border-radius: 20px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 30px;
    }

    /* Title styles */
    .wrapper h1 {
      font-size: 2.5em;
      color: #333;
      margin-bottom: 20px;
      font-weight: 600;
    }

    /* Save changes button */
    .save-button {
      background-color: #4A90E2;
      color: white;
      padding: 12px 25px;
      font-size: 1.2em;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .save-button:hover {
      background-color: #357ABD;
      transform: translateY(-2px);
    }

    /* Profile and password section combined */
    .profile-password-section {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 30px;
    }

    .profile-info, .password-section {
      width: 100%;
      display: grid;
      gap: 20px;
      text-align: left;
    }

    .profile-item {
      font-size: 1.1em;
      color: #555;
    }

    .profile-item strong {
      color: #333;
      font-weight: 600;
    }

    .profile-input {
      width: 100%;
      padding: 12px;
      font-size: 1.1em;
      border-radius: 8px;
      border: 1px solid #ddd;
      box-sizing: border-box;
      transition: border-color 0.3s ease;
    }

    .profile-input:focus {
      border-color: #4A90E2;
      outline: none;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      margin-bottom: 8px;
      color: #333;
    }
  </style>
</head>
<body>
  <div class="outer-background">
    <div class="wrapper">
      <h1>Profile Settings</h1>

      <!-- Profile Information and Password Section Combined -->
      <div class="profile-password-section">
        <!-- Profile Information Section -->
        <div class="profile-info">
          <div class="profile-item">
            <strong>First Name:</strong>
            <input type="text" id="first_name" value="John" class="profile-input">
          </div>

          <div class="profile-item">
            <strong>Last Name:</strong>
            <input type="text" id="last_name" value="Dee" class="profile-input">
          </div>

          <div class="profile-item">
            <strong>Email:</strong>
            <input type="email" id="email" value="john.dee@example.com" class="profile-input">
          </div>

          <div class="profile-item">
            <strong>Phone Number:</strong>
            <input type="tel" id="phone_number" value="+1 (555) 123-4567" class="profile-input">
          </div>

          <div class="profile-item">
            <strong>Organization Name:</strong>
            <input type="text" id="organization_name" value="Acme Corp" class="profile-input">
          </div>

          <div class="profile-item">
            <strong>Organization Type:</strong>
            <input type="text" id="organization_type" value="Tech" class="profile-input">
          </div>

          <div class="profile-item">
            <strong>Address:</strong>
            <input type="text" id="address" value="123 Main St, Springfield, IL" class="profile-input">
          </div>
        </div>

        <!-- Password Change Section -->
        <div class="password-section">
          <h2>Change Password</h2>
          <div class="form-group">
            <label for="current_password">Current Password:</label>
            <input type="password" id="current_password" class="profile-input">
          </div>

          <div class="form-group">
            <label for="new_password">New Password:</label>
            <input type="password" id="new_password" class="profile-input">
          </div>

          <div class="form-group">
            <label for="password_confirmation">Confirm New Password:</label>
            <input type="password" id="password_confirmation" class="profile-input">
          </div>
        </div>
      </div>

      <!-- Save Changes Button -->
      <button class="save-button" onclick="saveChanges()">Save Changes</button>
    </div>
  </div>

  <!-- JavaScript to handle save action -->
  <script>
    function saveChanges() {
      const firstName = document.getElementById('first_name').value;
      const lastName = document.getElementById('last_name').value;
      const email = document.getElementById('email').value;
      const phoneNumber = document.getElementById('phone_number').value;
      const organizationName = document.getElementById('organization_name').value;
      const organizationType = document.getElementById('organization_type').value;
      const address = document.getElementById('address').value;
      const currentPassword = document.getElementById('current_password').value;
      const newPassword = document.getElementById('new_password').value;
      const passwordConfirmation = document.getElementById('password_confirmation').value;

