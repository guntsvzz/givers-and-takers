<div class="auth-container-wrapper">
  <div class="auth-container">
    <div class="logo">
      <%= image_tag 'logo.png', alt: 'Givers & Takers Logo', width: '100' %>
    </div>

    <!-- Forgot Password Form -->
    <div class="forgot-password-form">
      <h1>Reset your password</h1>
      <p>We'll send you instructions to reset your password.</p>
      
      <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), local: true) do |f| %>
        <div class="form-group">
          <%= f.label :email, 'Email' %>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', required: true, class: "form-control", disabled: true, title: "This feature is currently unavailable" %>
          <% if resource.errors[:email].any? %>
            <div class="error-message">
              Please enter a valid email address.
            </div>
          <% end %>
        </div>
        
        <!-- Disable the button and add a title for tooltip message -->
        <%= f.submit "Reset password", class: "btn btn-primary", disabled: true, title: "This feature is currently unavailable" %>
      <% end %>

      <!-- Feature Unavailable Message -->
      <p class="unavailable-message" style="color: red; text-align: center; margin-top: 10px;">
        This feature is currently unavailable.
      </p>

      <p class="text-center">
        <%= link_to 'Return to sign in', new_session_path(resource_name) %>
      </p>

      <p class="privacy-note">
        This site is protected by reCAPTCHA and the Google Privacy Policy and Terms of Service apply.
      </p>
    </div>
  </div>
</div>

<styles>
.auth-container-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #4A90E2;
}

.auth-container {
  background-color: white;
  border-radius: 20px;
  padding: 30px;
  width: 100%;
  max-width: 350px; /* Set a max-width for consistent alignment */
}

.logo {
  text-align: center;
  margin-bottom: 20px;
}

h1 {
  color: #2C3E50;
  text-align: center;
  margin-bottom: 20px;
}

form {
  display: flex;
  flex-direction: column;
  align-items: stretch; /* Ensure form elements are aligned properly */
}

.form-group {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 15px;
}

label {
  font-size: 0.9rem;
  color: #2C3E50;
  margin-bottom: 5px;
}

input {
  padding: 10px;
  border: 1px solid #BDC3C7;
  border-radius: 5px;
  font-size: 1rem;
}

button {
  background-color: #2C3E50;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin-top: 10px;
  width: 100%; /* Full width for the button */
}

a {
  color: #2C3E50;
  text-decoration: none;
}

.text-center {
  text-align: center;
  margin-top: 1rem;
}
</styles>