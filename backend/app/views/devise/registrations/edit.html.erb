<div class="outer-background">
  <div class="wrapper">
    <h2>Profile <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      
      <!-- Profile Image Upload -->
      <div class="field">
        <%= f.label :profile_image, "Profile Image" %><br />
        <% if resource.profile_image.attached? %>
          <div class="current-profile-image">
            <%= image_tag resource.profile_image, alt: "Current Profile Image", class: "current-profile-avatar" %>
          </div>
        <% end %>
        <%= f.file_field :profile_image %>
      </div>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :organization_type %><br />
        <%= f.select :organization_type, User.organization_types.keys.map { |org_type| [org_type.humanize, org_type] }, include_blank: true %>
      </div>

      <div class="field">
        <%= f.label :organization_name %><br />
        <%= f.text_field :organization_name %>
      </div>

      <div class="field">
        <%= f.label :phone_number %><br />
        <%= f.telephone_field :phone_number, autocomplete: "tel", placeholder: "Enter 10-digit phone number" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Enter your current password to confirm your changes" %>
      </div>

      <div class="field">
        <%= f.label :password %> <br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "leave blank if you don't want to change it" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>

<style>
.outer-background {
  background-color: #4A90E2;
  width: 100%;
  padding: 40px 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Wrapper with white background and rounded corners */
.wrapper {
  max-width: 800px;
  padding: 40px;
  background-color: #F7F9FC;
  border-radius: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  width: 100%;
  text-align: center;
}
.current-profile-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 10px;
}
</style>