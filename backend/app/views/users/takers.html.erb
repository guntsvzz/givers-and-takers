    align-items: center;
    flex-wrap: wrap;
  }

  .filter-options label {
    font-size: 14px;
    display: flex;
    align-items: center;
    margin: 0;
  }

  .filter-options input {
    margin-right: 8px;
  }

  .filter-options button {
    padding: 5px 10px;
    font-size: 14px;
    background-color: #4A90E2;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .filter-options button:hover {
    background-color: #357ABD;
  }
</style>
