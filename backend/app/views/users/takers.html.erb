<h1>List of Takers</h1>

<% if @takers.any? %>  <!-- Check if there are any takers -->
  <table border="1" cellpadding="5" cellspacing="0">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Organization Name</th>
        <th>Organization Type</th>
      </tr>
    </thead>
    <tbody>
      <% @takers.each do |taker| %>
        <tr>
          <td><%= taker.first_name %></td>
          <td><%= taker.last_name %></td>
          <td><%= taker.organization_name %></td>
          <td><%= User.organization_types.key(taker.read_attribute_before_type_cast(:role).to_i)&.humanize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No takers found.</p>
<% end %>
