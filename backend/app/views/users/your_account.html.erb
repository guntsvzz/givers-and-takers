<div class="container">
  <h1>Your Account</h1>

  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>First Name:</strong> <%= @user.first_name %></p>
  <p><strong>Last Name:</strong> <%= @user.last_name %></p>
  <p><strong>Address:</strong> <%= @user.address %></p>
  <p><strong>Phone Number:</strong> <%= @user.phone_number %></p>
  <p><strong>Organization Name:</strong> <%= @user.organization_name %></p>
  <p><strong>Organization Type:</strong> 
    <%= User.organization_types.key(@user.read_attribute_before_type_cast(:organization_type).to_i)&.humanize %>
  </p>
  <p><strong>Role:</strong> 
    <%= User.roles.key(@user.read_attribute_before_type_cast(:role).to_i)&.humanize %>
  </p>
  <%= link_to 'Edit Account', edit_user_registration_path, class: 'btn btn-primary' %>
  
  <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
</div>
