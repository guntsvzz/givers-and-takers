<div class="form-container">
  <style>
    .form-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 20px;
      background: #f9f9f9;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      border-radius: 12px;
      font-family: Arial, sans-serif;
    }

    h1 {
      font-size: 24px;
      color: #333;
      margin-bottom: 20px;
      text-align: center;
    }

    .form-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .field {
      margin-bottom: 15px;
    }

    .field label {
      display: block;
      font-size: 18px;
      font-weight: bold;
      color: #333;
      margin-bottom: 8px;
    }

    .field input,
    .field textarea,
    .field select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 16px;
    }

    .field textarea {
      height: 120px;
      resize: vertical;
    }

    .image-upload-container {
      border: 2px dashed #ccc;
      padding: 20px;
      text-align: center;
      background: #f0f0f0;
      border-radius: 8px;
    }

    .image-preview {
      margin-top: 15px;
      max-width: 100%;
      height: auto;
      border-radius: 8px;
    }

    .remind-text {
      margin-top: 20px;
      text-align: center;
      font-size: 14px;
      color: #555;
    }

    .form-actions {
      text-align: center;
      margin-top: 30px;
    }

    .submit-button {
      background: #007bff;
      color: #fff;
      padding: 12px 24px;
      font-size: 18px;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    .submit-button:hover {
      background: #0056b3;
    }

    .cancel-button {
      margin-right: 10px;
      padding: 12px 24px;
      font-size: 16px;
      color: #333;
      background: #f0f0f0;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    .cancel-button:hover {
      background: #ddd;
    }
  </style>

  <%= form_with(model: request, local: true, multipart: true) do |form| %>
    <h1>Make a Request</h1>

    <div class="form-grid">
      <div>
        <div class="field">
          <%= form.label :title, "Title:" %>
          <%= form.text_field :title %>
        </div>
        <div class="field">
          <%= form.label :description, "Description:" %>
          <%= form.text_area :description %>
        </div>
        <div class="field">
          <%= form.label :item_name, "Enter your needed item:" %>
          <%= form.text_field :item_name %>
        </div>
        <div class="field">
          <%= form.label :quantity, "Enter your goal set (Amount):" %>
          <%= form.number_field :quantity %>
        </div>
      </div>

      <div>
        <div class="field">
          <%= form.label :category, "Category:" %>
          <%= form.select :category, Request.categories.keys.map { |category| [category.humanize, category] }, { include_blank: "Select a Category" } %>
        </div>
        <div class="field">
          <%= form.label :address, "Address:" %>
          <%= form.text_field :address %>
        </div>
        <div class="field">
          <%= form.label :start_time, "Start Time:" %>
          <%= form.datetime_local_field :start_time, placeholder: "YYYY-MM-DD HH:MM" %>
        </div>
        <div class="field">
          <%= form.label :end_time, "End Time:" %>
          <%= form.datetime_local_field :end_time, placeholder: "YYYY-MM-DD HH:MM" %>
        </div>
        <div class="field">
          <%= form.label :status, "Status:" %>
          <% if current_user.admin? %>
            <%= form.select :status, Request.statuses.keys.map { |status| [status.humanize, status] }, {}, { class: "status-dropdown" } %>
          <% else %>
            <p>Only administrators can set status</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="field">
      <div class="image-upload-container">
        <%= form.label :image, "Preview Image" %>
        <%= form.file_field :image, id: "image-upload", accept: "image/*" %>
        <img id="image-preview" class="image-preview" />
      </div>
    </div>

    <div class="form-actions">
      <%= link_to 'Cancel', requests_path, class: 'cancel-button' %>
      <%= form.submit "Make a Request", class: 'submit-button' %>
    </div>

    <p class="remind-text">
      Remind: This request will be closed when the offering reaches the goal.
    </p>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Flatpickr for datetime fields
    flatpickr("#request_start_time", {
      enableTime: true,
      dateFormat: "Y-m-d H:i",
    });

    flatpickr("#request_end_time", {
      enableTime: true,
      dateFormat: "Y-m-d H:i",
    });

    // Image upload preview
    document.getElementById('image-upload')?.addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
        if (file.size > 5 * 1024 * 1024) {
          alert('File size must be less than 5MB');
          this.value = '';
          return;
        }
        const reader = new FileReader();
        reader.onload = function(e) {
          const preview = document.getElementById('image-preview');
          preview.src = e.target.result;
          preview.style.display = 'block';
        };
        reader.readAsDataURL(file);
      }
    });
  });
</script>
