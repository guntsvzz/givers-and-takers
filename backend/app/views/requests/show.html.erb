<%= render @request %>

<div>
  <p>Current User Role (raw): <%= current_user.inspect %></p>
  <p>Current User Role: <%= current_user.role %></p>
  <p>Is Giver?: <%= current_user.giver? %></p>
  <p>Is Taker?: <%= current_user.taker? %></p>

  <% if current_user.role != 2 %>
    <%= link_to "Edit this request", edit_request_path(@request) %> |
    <%= button_to "Destroy this request", @request, method: :delete %>
  <% end %>
  <%= link_to "Back to requests", requests_path %>
</div>
